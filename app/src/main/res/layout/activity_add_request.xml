<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AddRequest"
        android:orientation="vertical"
       >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="12dp"
            android:gravity="center"
            android:text="@string/add_request_msg"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@string/where_is_your_location"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/addPostLocation"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="4"
                android:ems="10"
                android:hint="@string/your_location"
                android:inputType="textPersonName"
                android:textSize="14sp"
                tools:ignore="Autofill" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="3dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/what_blood_type_do_you_need"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


            <Spinner
                android:id="@+id/req_blood_Type"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="3dp">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/phone_number"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/enterPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:ems="10"
                android:hint="@string/phone_number_without"
                android:inputType="phone"
                android:textSize="14sp" />

        </LinearLayout>


        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_margin="10dp"
            android:background="@drawable/textspace"
            android:ems="10"
            android:gravity="top|left"
            android:layout_gravity="center"
            android:hint="@string/additional_information"
            android:inputType="textMultiLine"
            android:maxLength="50"
            android:maxLines="3"
            android:padding="3dp"

            />
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="1.5dp"
            android:background="#60bb0a1e"
            />
        <Button
            android:id="@+id/addRequest"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/button"
            android:text="@string/add_request"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
</ScrollView>
