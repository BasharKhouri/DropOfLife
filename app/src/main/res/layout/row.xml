<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/row_BackGround"
    android:elevation="3dp"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_profile_image"
            android:layout_width="68dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/itemUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/item_profile_image"
            android:layout_toRightOf="@+id/item_profile_image"
            android:text="UserName"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/location"
            android:layout_width="72dp"
            android:layout_height="16dp"
            android:layout_below="@+id/itemUserName"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="103dp"
            android:layout_marginRight="103dp"
            android:layout_toEndOf="@+id/item_profile_image"
            android:layout_toRightOf="@+id/item_profile_image"
            android:autoLink="all"
            android:text="@string/location"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/itemDateOfPublish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/contact"
            android:layout_below="@+id/itemBloodType"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="26dp"
            android:autoLink="all"
            android:text="@string/date"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_profile_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginBottom="20dp"
            android:layout_toStartOf="@+id/itemDateOfPublish"
            android:layout_toLeftOf="@+id/itemDateOfPublish"
            android:autoLink="all"
            android:text="@string/additional_ino"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/itemBloodType"
            android:layout_width="123dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:layout_toEndOf="@+id/itemUserName"
            android:layout_toRightOf="@+id/itemUserName"
            android:autoLink="all"
            android:gravity="end"
            android:text="AB+"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_above="@+id/contact"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoLink="all"
            android:background="#90bb0a1e" />

        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemDescription"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="-2dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:autoLink="all">

            <Button
                android:id="@+id/item_call_me"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:autoLink="all"
                android:background="@drawable/button_row"
                android:drawableStart="@drawable/ic_baseline_call_24"
                android:drawableLeft="@drawable/ic_baseline_call_24"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/call_me"
                android:textSize="12sp" />

            <Button
                android:id="@+id/item_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:autoLink="all"
                android:background="@drawable/button_row"
                android:drawableStart="@drawable/ic_baseline_share_24"
                android:drawableLeft="@drawable/ic_baseline_share_24"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/share"
                android:textSize="12sp" />

            <Button
                android:id="@+id/item_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:autoLink="all"
                android:background="@drawable/button_row"
                android:drawableStart="@drawable/ic_baseline_chat_24"
                android:drawableLeft="@drawable/ic_baseline_chat_24"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/chat"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/contact"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:autoLink="all"
            android:background="#90bb0a1e" />

        <ImageButton
            android:id="@+id/moreOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/trasnperant"
            android:src="@drawable/ic_baseline_more_horiz_24" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>