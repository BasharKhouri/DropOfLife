<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    android:elevation="3dp"
    app:cardUseCompatPadding="true"
    android:background="#ffffff"
    app:contentPadding="5dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_profile_image"
        android:layout_width="68dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/itemUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/item_profile_image"
        android:layout_toRightOf="@+id/item_profile_image"
        android:text="UserName"
        android:textSize="15dp"
        android:textColor="#000"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="72dp"
        android:layout_height="16dp"
        android:layout_below="@+id/itemUserName"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="-24dp"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:layout_toStartOf="@+id/imageView3"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toEndOf="@+id/item_profile_image"
        android:layout_toRightOf="@+id/item_profile_image"
        android:autoLink="all"
        android:text="@string/location"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/itemDateOfPublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/item_profile_image"
        android:layout_toRightOf="@+id/item_profile_image"
        android:autoLink="all"
        android:text="Date"
        android:textColor="#000"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_profile_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="20dp"
        android:autoLink="all"
        android:text="@string/additional_ino"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/itemBloodType"
        android:layout_width="123dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="94dp"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_toEndOf="@+id/itemUserName"
        android:layout_toRightOf="@+id/itemUserName"
        android:autoLink="all"
        android:gravity="end"
        android:text="AB+"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#60bb0a1e"
        android:layout_above="@+id/contact"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:autoLink="all"
        />
    <LinearLayout
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:orientation="horizontal"
        android:autoLink="all"
        >

        <Button
            android:id="@+id/item_call_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/button_row"
            android:text="@string/call_me"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_baseline_call_24"
            android:drawableLeft="@drawable/ic_baseline_call_24"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:autoLink="all"
            />

        <Button
            android:id="@+id/item_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/button_row"
            android:text="@string/share"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_baseline_share_24"
            android:drawableLeft="@drawable/ic_baseline_share_24"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:autoLink="all"
            />

        <Button
            android:id="@+id/item_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/button_row"
            android:text="@string/chat"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_baseline_chat_24"
            android:drawableLeft="@drawable/ic_baseline_chat_24"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:autoLink="all"
            />

    </LinearLayout>
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#60bb0a1e"
        android:layout_below="@+id/contact"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:autoLink="all"
        />

    <ImageView
        android:id="@+id/moreOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_baseline_more_horiz_24" />


</RelativeLayout>
</androidx.cardview.widget.CardView>